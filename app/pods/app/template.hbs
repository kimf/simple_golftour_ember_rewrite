<div class="application">
  <sgt-loading></sgt-loading>

  <aside class="sidebar">
    <figure class="logo">
      <img src="/images/logo.png" alt="Logo Image" />
    </figure>

    <nav>
      <h4>{{session.user_name}}</h4>
      <ul>
        <li>{{link-to "Overview" 'app.index'}}</li>
        <li>{{link-to "Schedule" 'app.schedule'}}</li>
        <li>{{link-to "Settings" 'app.settings' }}</li>
      </ul>
    </nav>

    <nav>
      <h4>Tours</h4>
      <ul>
        {{#each attrs.tours as |tour|}}
          <li>
            {{link-to tour.name 'app.tour' tour}}
          </li>
        {{/each}}
      </ul>
    </nav>

    <div class="bottom">
      <ul>
        <li><a href="/">Logout</a></li>
      </ul>
    </div>
  </aside>

  <section class="main">
    {{outlet}}
  </section>

</div>
