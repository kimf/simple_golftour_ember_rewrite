<div class="application">
  <aside class="sidebar">
    <figure class="logo">
      <img src="/images/logo.png" alt="Logo Image" />
    </figure>

    <nav>
      <ul>
        <li>{{link-to "Dashboard" 'dashboard'}}</li>
        <li>{{link-to "Schedule" 'schedule'}}</li>
      </ul>
    </nav>

    <nav>
      <h4>Tours</h4>
      <ul>
        {{#each tour in attrs.tours}}
          <li>
            {{link-to tour.name 'tour' tour}}
          </li>
        {{/each}}
      </ul>
    </nav>

    <div class="bottom">
      <h4>{{session.user_name}}</h4>
      <a href="/" {{ action 'invalidateSession'}}>Logout</a>
    </div>
  </aside>

  <section class="main">
    {{outlet}}
  </section>

</div>
